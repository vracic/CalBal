@model CalBal.Models.Unosprehnam
@{
    var namirnice = ViewBag.PrehrambeneNamirnice as List<CalBal.Models.Prehrambenanamirnica>;
    var korisnikId = ViewBag.KorisnikId as int?;
}
<form id="addUnosForm" class="row align-items-end g-2">
    <input type="hidden" asp-for="KorisnikId" value="@korisnikId" />
    <div class="col-md-3">
        <label class="form-label">Datum</label>
        <input asp-for="Datum" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")"  />
    </div>
    <div class="col-md-5">
        <label class="form-label">Namirnica</label>
        <select asp-for="HranaId" class="form-control">
            @foreach (var n in namirnice)
            {
                <option value="@n.PrehrambenaNamirnicaId">@n.Naziv</option>
            }
        </select>
    </div>
    <div class="col-md-2">
        <label class="form-label">Količina</label>
        <input asp-for="Kolicina" class="form-control" />
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-success btn-sm">Dodaj namirnicu</button>
    </div>
</form>
<div id="addUnosResult"></div>